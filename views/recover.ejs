<%- include('template/header', { title: 'Recuperar Conta // '+settings.server }) %>
<div class="container">
	<div class="offline">
		<div class="page">
			<div class="logo">
				<a href="/"><img src="/images/logo-<%- settings.theme %>.png" id="logo" /></a>
			</div>
			<%- include('template/messages') %> <% if (settings.recover) { %>
			<form action="/recover" method="post" class="padding" id="loginForm">
				<div class="form-floating mb-3">
					<input type="text" class="form-control" id="data" name="data" placeholder="Login ou E-mail" value="<%= typeof data !== 'undefined' ? data : '' %>" autofocus />
					<label for="data">Login ou E-mail</label>
				</div>

				<% if (settings.captcha) { %>
				<div class="cf-turnstile" data-sitekey="<%- settings.site_key %>"></div>
				<% } %>
				<button type="submit" class="button btn btn-primary mt-1">Recuperar</button>
			</form>
			<% } else { %>
			<div class="padding pt-4">
				<div class="alert alert-error">
					<p>Indisponível, tente novamente mais tarde.</p>
				</div>
			</div>
			<% } %>

			<div class="row mt-3">
				<div class="col-md-6 p-0 center-div">
					<a href="/login" class="text-decoration-none">
						<div class="link">
							<i class="las la-sign-in-alt"></i>
							<div>
								<h6>Já tem uma conta?</h6>
								<p>Faça login agora mesmo!</p>
							</div>
						</div>
					</a>
				</div>
				<div class="col-md-6 p-0 center-div">
					<a href="/register" class="text-decoration-none">
						<div class="link">
							<i class="las la-user-circle"></i>
							<div>
								<h6>Ainda não é membro?</h6>
								<p>Crie sua conta agora!</p>
							</div>
						</div>
					</a>
				</div>
			</div>
		</div>
	</div>
</div>
<%- include('template/footer') %>
